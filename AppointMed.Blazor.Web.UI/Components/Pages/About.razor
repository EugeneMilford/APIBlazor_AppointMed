    }

    .btn-primary {
        background: linear-gradient(135deg, var(--teal), var(--green));
        color: white;
        border: none;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(10, 204, 129, 0.3);
        color: white;
    }

    .btn-secondary {
        background: var(--purple);
        color: white;
        border: none;
    }

    .btn-secondary:hover {
        background: #440066;
        color: white;
    }
