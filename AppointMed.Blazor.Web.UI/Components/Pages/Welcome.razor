@page "/"
@attribute [LayoutAttribute(typeof(EmptyLayout))]

<PageTitle>Welcome • AppointMed</PageTitle>

<main class="welcome-root" role="main" aria-labelledby="welcome-heading">
    <div class="welcome-container">
        <div class="welcome-card" role="region" aria-label="Welcome to AppointMed">
            <header class="welcome-header">
                <div class="logo-section">
                    <span class="logo-icon">⚕️</span>
                    <h1 id="welcome-heading">AppointMed</h1>
                </div>
                <p class="tagline">Your Healthcare Appointment Management Platform</p>
            </header>

            <section class="welcome-actions">
                <a class="btn btn-primary-login" href="/users/login" role="button" aria-label="Log in to AppointMed">
                    <span>Log In</span>
                    <span class="btn-arrow">→</span>
                </a>
                <a class="btn btn-primary-register" href="/users/register" role="button" aria-label="Register a new account">
                    <span>Register</span>
                    <span class="btn-arrow">→</span>
                </a>
            </section>

            <section class="welcome-content">
                <div class="feature-grid">
                    <div class="feature-item">
                        <span class="feature-icon">📅</span>
                        <h3>Easy Scheduling</h3>
                        <p>Book appointments with verified healthcare professionals in just a few clicks</p>
                    </div>
                    <div class="feature-item">
                        <span class="feature-icon">👨‍⚕️</span>
                        <h3>Verified Doctors</h3>
                        <p>Access a network of licensed and verified medical practitioners</p>
                    </div>
                    <div class="feature-item">
                        <span class="feature-icon">🔒</span>
                        <h3>Secure & Private</h3>
                        <p>Your health data is protected with enterprise-grade security</p>
                    </div>
                </div>

                <div class="description-section">
                    <h2>About AppointMed</h2>
                    <p>
                        AppointMed is a comprehensive medical appointment management system designed to streamline healthcare scheduling
                        for both patients and healthcare providers. Our platform connects patients with qualified doctors, manages
                        appointment workflows, and ensures seamless communication throughout the healthcare journey.
                    </p>
                    <p>
                        Whether you're booking your first consultation, managing ongoing treatments, or coordinating with multiple
                        specialists, AppointMed provides the tools you need to take control of your healthcare experience.
                    </p>
                </div>
            </section>
        </div>
    </div>
</main>

<style>
    :root {
        --green: #0acc81;
        --black: #000000;
        --purple: #270042;
        --teal: #18739a;
        --cyan: #3ccce4;
        --sage: #8dbdae;
        --red: #c90136;
        --blue: #2e9ae8;
        --aqua: #16a085;
        --orange: #ff7a00;
        --lime: #2cba00;
        --intense-blue: #282fe2;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .welcome-root {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 100%);
        background-size: 400% 400%;
        animation: gradientShift 15s ease infinite;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    @@keyframes gradientShift {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .welcome-container {
        width: 100%;
        max-width: 1000px;
    }

    .welcome-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(255, 255, 255, 0.1);
        padding: 3rem;
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .welcome-header {
        text-align: center;
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid rgba(102, 126, 234, 0.2);
    }

    .logo-section {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .logo-icon {
        font-size: 3rem;
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }
    }

    .welcome-header h1 {
        font-size: 3rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--purple), var(--teal), var(--intense-blue));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .tagline {
        font-size: 1.25rem;
        color: #555;
        font-weight: 500;
        margin-top: 0.5rem;
    }

    .welcome-content {
        margin-bottom: 2.5rem;
    }

    .feature-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .feature-item {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
        border: 1px solid rgba(102, 126, 234, 0.2);
        border-radius: 16px;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
    }

        .feature-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
            border-color: rgba(102, 126, 234, 0.5);
        }

    .feature-icon {
        font-size: 2.5rem;
        display: block;
        margin-bottom: 1rem;
    }

    .feature-item h3 {
        font-size: 1.1rem;
        color: var(--purple);
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .feature-item p {
        font-size: 0.9rem;
        color: #666;
        line-height: 1.5;
    }

    .description-section {
        background: linear-gradient(135deg, rgba(10, 204, 129, 0.05), rgba(24, 115, 154, 0.05));
        border-left: 4px solid var(--green);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

        .description-section h2 {
            font-size: 1.5rem;
            color: var(--purple);
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .description-section p {
            font-size: 1rem;
            line-height: 1.7;
            color: #444;
            margin-bottom: 1rem;
        }

            .description-section p:last-child {
                margin-bottom: 0;
            }

    .welcome-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 2rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        min-width: 180px;
        position: relative;
        overflow: hidden;
    }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.5s ease;
        }

        .btn:hover::before {
            left: 100%;
        }

    .btn-arrow {
        transition: transform 0.3s ease;
        font-size: 1.3rem;
    }

    .btn:hover .btn-arrow {
        transform: translateX(5px);
    }

    .btn-primary-login {
        background: linear-gradient(135deg, var(--green), var(--lime));
        color: var(--black);
        box-shadow: 0 8px 20px rgba(10, 204, 129, 0.3);
    }

        .btn-primary-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(10, 204, 129, 0.4);
        }

    .btn-primary-register {
        background: linear-gradient(135deg, var(--intense-blue), var(--blue));
        color: #fff;
        box-shadow: 0 8px 20px rgba(40, 47, 226, 0.3);
    }

        .btn-primary-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(40, 47, 226, 0.4);
        }

    .welcome-footer {
        text-align: center;
        padding-top: 2rem;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }

    .footer-text {
        font-size: 0.85rem;
        color: #666;
    }

        .footer-text a {
            color: var(--intense-blue);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .footer-text a:hover {
                color: var(--purple);
                text-decoration: underline;
            }

    @@media (max-width: 768px) {
        .welcome-card {
            padding: 2rem 1.5rem;
        }

        .welcome-header h1 {
            font-size: 2rem;
        }

        .tagline {
            font-size: 1rem;
        }

        .feature-grid {
            grid-template-columns: 1fr;
        }

        .btn {
            min-width: 150px;
            padding: 0.875rem 1.5rem;
            font-size: 1rem;
        }
    }
</style>
