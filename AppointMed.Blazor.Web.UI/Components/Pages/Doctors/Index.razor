@page "/doctors/"
@inject IDoctorService doctorService
@inject IJSRuntime js
@using System.Linq

<PageTitle>Doctors • AppointMed</PageTitle>

<div class="doctors-root">
    <div class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <h1><i class="bi bi-people-fill"></i> Find a Trusted Doctor</h1>
                <p>
                    Browse verified specialists, read profiles, and book appointments in a few clicks. We connect you with compassionate, vetted clinicians so you can focus on getting better.
                </p>
            </div>

            <div class="hero-actions">
                <a class="btn btn-accent" href="/appointments">
                    <i class="bi bi-calendar-check"></i>
                    <span>My Appointments</span>
                </a>

                <AuthorizeView Roles="Administrator">
                    <Authorized>
                        <a class="btn btn-admin" href="/doctors/create">
                            <i class="bi bi-plus-lg"></i>
                            <span>Add Doctor</span>
                        </a>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>

    @if (response.Success == false)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <span>@response.Message</span>
        </div>
    }
    else
    {
        @if (Doctors == null)
        {
            <div class="loading-container">
                <div class="spinner-large"></div>
                <p>Loading doctors...</p>
            </div>
        }
        else if (!Doctors.Any())
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-circle-fill"></i>
                <div>
                    <h4>No doctors found</h4>
                    <p>Try refreshing or come back later. Administrators can add new providers.</p>
                </div>
            </div>
        }
        else
        {
            <div class="doctors-grid">
                @foreach (var doctor in Doctors)
                {
                    <article class="doctor-card">
                        <div class="card-header">
                            <div class="doctor-profile">
                                @if (!string.IsNullOrWhiteSpace(doctor.ProfileImageUrl))
                                {
                                    <img src="@doctor.ProfileImageUrl"
                                         alt="Dr. @doctor.FullName"
                                         class="profile-image"
                                         loading="lazy"
                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                    <div class="profile-initials" style="display: none;">
                                        <span>@GetInitials(doctor)</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="profile-initials">
                                        <span>@GetInitials(doctor)</span>
                                    </div>
                                }

                                <div class="doctor-info">
                                    <h5>Dr. @doctor.FullName</h5>
                                    <p class="specialization">@(!string.IsNullOrWhiteSpace(doctor.Specialization) ? doctor.Specialization : "General Practitioner")</p>
                                </div>
                            </div>

                            <div class="status-badge">
                                <i class="bi bi-@(doctor.IsActive ? "check-circle-fill" : "x-circle-fill")"></i>
                            </div>
                        </div>

                        <div class="card-body">
                            <p class="bio">
                                @(!string.IsNullOrWhiteSpace(doctor.Bio) ? doctor.Bio : "Experienced clinician committed to delivering patient-centered care.")
                            </p>

                            <div class="doctor-meta">
                                <div class="meta-item">
                                    <i class="bi bi-envelope"></i>
                                    <a href="mailto:@doctor.Email">@doctor.Email</a>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(doctor.PhoneNumber))
                                {
                                    <div class="meta-item">
                                        <i class="bi bi-telephone"></i>
                                        <a href="tel:@doctor.PhoneNumber">@doctor.PhoneNumber</a>
                                    </div>
                                }
                                <div class="meta-item">
                                    <i class="bi bi-calendar-event"></i>
                                    <span>@GetYearsExperience(doctor) years experience</span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <a class="btn btn-details" href="/doctors/details/@doctor.DoctorId">
                                <i class="bi bi-info-circle"></i>
                                <span>View Details</span>
                            </a>

                            <AuthorizeView Roles="Administrator">
                                <Authorized>
                                    <div class="admin-actions">
                                        <a class="btn btn-edit" href="/doctors/update/@doctor.DoctorId" title="Edit @doctor.FullName">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <button class="btn btn-delete" @onclick="@(() => Delete(doctor.DoctorId))" title="Delete @doctor.FullName">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </Authorized>
                            </AuthorizeView>
                        </div>
                    </article>
                }
            </div>
        }
    }
</div>

<style>
