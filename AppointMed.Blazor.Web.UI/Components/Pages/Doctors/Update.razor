@page "/doctors/update/{id:int}"
@inject IDoctorService doctorService
@inject NavigationManager navManager
@attribute [Authorize(Roles = Roles.Administrator)]

<PageTitle>Edit Doctor • AppointMed</PageTitle>

<div class="update-doctor-root">
    <div class="page-header">
        <div class="header-content">
            <h1><i class="bi bi-pencil-square"></i> Edit Doctor Details</h1>
            <p>Update doctor profile and professional information</p>
        </div>
    </div>

    <div class="form-container">
        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="alert alert-@StatusClass">
                <i class="bi bi-@(StatusClass == "success" ? "check-circle-fill" : "exclamation-triangle-fill")"></i>
                <span>@Message</span>
            </div>
        }

        @if (Doctor == null)
        {
            <div class="loading-container">
                <div class="spinner-large"></div>
                <p>Loading doctor details...</p>
            </div>
        }
        else
        {
            <EditForm Model="Doctor" OnValidSubmit="HandleUpdateDoctor">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-summary" />

                <div class="form-row">
                    <div class="form-group">
                        <label for="firstname" class="form-label">
                            <i class="bi bi-person"></i> First Name
                        </label>
                        <InputText @bind-Value="Doctor.FirstName" class="form-control" id="firstname" placeholder="Enter first name" />
                        <ValidationMessage For="@(() => Doctor.FirstName)" class="validation-message" />
                    </div>

                    <div class="form-group">
                        <label for="lastname" class="form-label">
                            <i class="bi bi-person"></i> Last Name
                        </label>
                        <InputText @bind-Value="Doctor.LastName" class="form-control" id="lastname" placeholder="Enter last name" />
                        <ValidationMessage For="@(() => Doctor.LastName)" class="validation-message" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="email" class="form-label">
                            <i class="bi bi-envelope"></i> Email Address
                        </label>
                        <InputText @bind-Value="Doctor.Email" class="form-control" id="email" type="email" placeholder="doctor@example.com" />
                        <ValidationMessage For="@(() => Doctor.Email)" class="validation-message" />
                    </div>

                    <div class="form-group">
                        <label for="phonenumber" class="form-label">
                            <i class="bi bi-telephone"></i> Phone Number
                        </label>
                        <InputText @bind-Value="Doctor.PhoneNumber" class="form-control" id="phonenumber" placeholder="+1 (555) 000-0000" />
                        <ValidationMessage For="@(() => Doctor.PhoneNumber)" class="validation-message" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="specialization" class="form-label">
                        <i class="bi bi-heart-pulse"></i> Specialization
                    </label>
                    <InputText @bind-Value="Doctor.Specialization" class="form-control" id="specialization" placeholder="e.g., Cardiology, Pediatrics" />
                    <ValidationMessage For="@(() => Doctor.Specialization)" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="bio" class="form-label">
                        <i class="bi bi-file-text"></i> Biography
                    </label>
                    <InputTextArea @bind-Value="Doctor.Bio" class="form-control" id="bio" rows="4" placeholder="Brief professional biography..." />
                    <ValidationMessage For="@(() => Doctor.Bio)" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="profileimageurl" class="form-label">
                        <i class="bi bi-image"></i> Profile Image URL
                    </label>
                    <InputText @bind-Value="Doctor.ProfileImageUrl" class="form-control" id="profileimageurl" placeholder="https://example.com/image.jpg" />
                    <ValidationMessage For="@(() => Doctor.ProfileImageUrl)" class="validation-message" />
                </div>

                @if (!string.IsNullOrWhiteSpace(Doctor.ProfileImageUrl))
                {
                    <div class="image-preview-section">
                        <label class="form-label">Image Preview</label>
                        <div class="image-preview-container">
                            <img src="@Doctor.ProfileImageUrl"
                                 alt="Profile Preview"
                                 class="preview-image"
                                 onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22200%22 height=%22200%22%3E%3Crect width=%22200%22 height=%22200%22 fill=%22%23ddd%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 dominant-baseline=%22middle%22 text-anchor=%22middle%22 fill=%22%23999%22%3EInvalid Image%3C/text%3E%3C/svg%3E'" />
                        </div>
                    </div>
                }

                <div class="form-group">
                    <div class="status-toggle">
                        <InputCheckbox @bind-Value="Doctor.IsActive" class="form-check-input" id="isactive" />
                        <label class="form-check-label" for="isactive">
                            <i class="bi bi-@(Doctor.IsActive ? "check-circle-fill" : "x-circle-fill")"></i>
                            <span>Doctor is @(Doctor.IsActive ? "Active" : "Inactive")</span>
                        </label>
                    </div>
                </div>

                <div class="form-actions">
                    <button class="btn btn-primary" type="submit" disabled="@IsProcessing">
                        @if (IsProcessing)
                        {
                            <span class="spinner"></span>
                            <span>Updating...</span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle"></i>
                            <span>Update Doctor</span>
                        }
                    </button>
                    <button @onclick="BackToList" class="btn btn-secondary" type="button" disabled="@IsProcessing">
                        <i class="bi bi-arrow-left"></i>
                        <span>Back To List</span>
                    </button>
                </div>
            </EditForm>
        }
    </div>
</div>

<style>
