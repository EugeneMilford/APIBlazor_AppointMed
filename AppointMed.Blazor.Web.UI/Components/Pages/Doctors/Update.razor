        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        margin-top: 0.5rem;
    }

    .preview-image {
        max-width: 200px;
        max-height: 200px;
        border-radius: 12px;
        object-fit: cover;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .status-toggle {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
        border: 2px solid rgba(102, 126, 234, 0.2);
        border-radius: 12px;
        padding: 1rem 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .form-check-input {
        width: 24px;
        height: 24px;
        cursor: pointer;
        border: 2px solid var(--teal);
    }

        .form-check-input:checked {
            background-color: var(--green);
            border-color: var(--green);
        }

    .form-check-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 700;
        color: var(--purple);
        margin: 0;
        cursor: pointer;
        font-size: 1rem;
    }

        .form-check-label i {
            font-size: 1.25rem;
            color: var(--teal);
        }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid rgba(102, 126, 234, 0.1);
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem 1.75rem;
        border-radius: 10px;
        font-weight: 700;
        font-size: 1rem;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.5s ease;
        }

        .btn:hover::before {
            left: 100%;
        }

    .btn-primary {
        background: linear-gradient(135deg, var(--blue), var(--cyan));
        color: white;
        box-shadow: 0 6px 20px rgba(46, 158, 232, 0.3);
    }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(46, 158, 232, 0.4);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    .btn-secondary {
        background: transparent;
        color: var(--purple);
        border: 2px solid rgba(39, 0, 66, 0.2);
    }

        .btn-secondary:hover:not(:disabled) {
            background: rgba(39, 0, 66, 0.05);
            transform: translateY(-2px);
        }

        .btn-secondary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    .spinner {
        width: 16px;
        height: 16px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    @@media (max-width: 768px) {
        .update-doctor-root {
            padding: 0;
        }

        .page-header {
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .header-content h1 {
            font-size: 1.5rem;
        }

        .form-container {
            padding: 1.5rem;
        }

        .form-row {
            grid-template-columns: 1fr;
            gap: 0;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }
</style>

@code {
    [Parameter]
    public int id { get; set; }

    private UpdateDoctorDto? Doctor;
    private string Message = string.Empty;
    private string StatusClass = string.Empty;
    private bool IsProcessing = false;

    protected override async Task OnInitializedAsync()
    {
        var response = await doctorService.GetForUpdate(id);
        if (response.Success)
        {
            Doctor = response.Data;
        }
        else
        {
            Message = response.Message ?? "Failed to load doctor details.";
            StatusClass = "danger";
        }
    }

    private async Task HandleUpdateDoctor()
    {
        IsProcessing = true;
        Message = string.Empty;

        try
        {
            var response = await doctorService.Edit(id, Doctor);

            if (response.Success)
            {
                Message = "Doctor updated successfully!";
                StatusClass = "success";
                await Task.Delay(1500);
                BackToList();
            }
            else
            {
                Message = response.Message ?? "Failed to update doctor.";
                StatusClass = "danger";
            }
        }
        catch (Exception ex)
        {
            Message = $"Error updating doctor: {ex.Message}";
            StatusClass = "danger";
        }
        finally
        {
            IsProcessing = false;
        }
    }

    private void BackToList()
    {
        navManager.NavigateTo("/doctors/");
    }
}