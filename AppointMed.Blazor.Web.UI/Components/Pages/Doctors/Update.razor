        --green: #0acc81;
        --black: #000000;
        --purple: #270042;
        --teal: #18739a;
        --cyan: #3ccce4;
        --sage: #8dbdae;
        --red: #c90136;
        --blue: #2e9ae8;
        --lime: #2cba00;
        --intense-blue: #282fe2;
    }

    .update-doctor-root {
        max-width: 900px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, rgba(39, 0, 66, 0.05), rgba(24, 115, 154, 0.05));
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        border-left: 6px solid var(--blue);
    }

    .header-content h1 {
        font-size: 2rem;
        font-weight: 800;
        color: var(--purple);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .header-content p {
        color: #666;
        margin: 0;
        font-size: 1.05rem;
    }

    .form-container {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(102, 126, 234, 0.1);
    }

    .alert {
        border-radius: 12px;
        padding: 1rem 1.25rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 600;
    }

    .alert-success {
        background: linear-gradient(135deg, rgba(10, 204, 129, 0.1), rgba(44, 186, 0, 0.1));
        border: 2px solid var(--green);
        color: var(--green);
    }

    .alert-danger {
        background: linear-gradient(135deg, rgba(201, 1, 54, 0.1), rgba(255, 122, 0, 0.1));
        border: 2px solid var(--red);
        color: var(--red);
    }

    .alert i {
        font-size: 1.5rem;
    }

    .loading-container {
        text-align: center;
        padding: 3rem;
    }

    .spinner-large {
        width: 48px;
        height: 48px;
        border: 4px solid rgba(24, 115, 154, 0.2);
        border-top-color: var(--teal);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto 1rem;
    }

    .loading-container p {
        color: #666;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .validation-summary {
        background: linear-gradient(135deg, rgba(201, 1, 54, 0.1), rgba(255, 122, 0, 0.1));
        border: 2px solid rgba(201, 1, 54, 0.3);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: var(--red);
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 700;
        color: var(--purple);
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }

        .form-label i {
            color: var(--teal);
        }

    .form-control {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid rgba(102, 126, 234, 0.2);
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.8);
        font-family: inherit;
    }

        .form-control:focus {
            outline: none;
            border-color: var(--intense-blue);
            box-shadow: 0 0 0 4px rgba(40, 47, 226, 0.1);
            background: white;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .validation-message {
