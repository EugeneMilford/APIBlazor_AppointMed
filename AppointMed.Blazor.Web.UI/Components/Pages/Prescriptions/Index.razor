@page "/prescriptions"
@inject IPrescriptionService prescriptionService
@inject IJSRuntime js
@attribute [Authorize]

<PageTitle>My Prescriptions • AppointMed</PageTitle>

<section class="prescriptions-page container my-5">
    <div class="page-header mb-4">
        <div>
            <h3 class="text-purple">
                <i class="bi bi-capsule-pill"></i> My Prescriptions
            </h3>
            <p class="text-muted">View and manage your prescribed medications</p>
        </div>

        <AuthorizeView Roles="Administrator">
            <Authorized>
                <a class="btn btn-create" href="/prescriptions/create">
                    <i class="bi bi-plus-lg"></i>
                    Create Prescription
                </a>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (!response.Success)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Error:</strong> @response.Message
        </div>
    }
    else if (Prescriptions == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-teal"></div>
            <p class="mt-3">Loading prescriptions...</p>
        </div>
    }
    else if (!Prescriptions.Any())
    {
        <div class="empty-state">
            <i class="bi bi-capsule-pill empty-icon"></i>
            <h5>No Prescriptions Yet</h5>
            <p class="text-muted">You don't have any prescriptions yet</p>
            <AuthorizeView Roles="Administrator">
                <Authorized>
                    <a class="btn btn-primary mt-3" href="/prescriptions/create">
                        <i class="bi bi-plus-lg"></i>
                        Create First Prescription
                    </a>
                </Authorized>
            </AuthorizeView>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var prescription in Prescriptions.OrderByDescending(p => p.PrescribedDate))
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card prescription-card h-100 @(prescription.IsFulfilled ? "fulfilled" : "pending")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@prescription.MedicineName</h5>
                                @if (prescription.IsFulfilled)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Fulfilled
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock"></i> Pending
                                    </span>
                                }
                            </div>

                            <div class="prescription-details">
                                <p class="detail-item">
                                    <i class="bi bi-hash"></i>
                                    <strong>Quantity:</strong> @prescription.Quantity
                                </p>

                                @if (!string.IsNullOrWhiteSpace(prescription.Instructions))
                                {
                                    <p class="detail-item">
                                        <i class="bi bi-file-text"></i>
                                        <strong>Instructions:</strong> @prescription.Instructions
                                    </p>
                                }

                                <p class="detail-item">
                                    <i class="bi bi-calendar3"></i>
                                    <strong>Prescribed:</strong> @prescription.PrescribedDate.ToString("dd MMM yyyy")
                                </p>

                                @if (prescription.IsFulfilled && prescription.FulfilledDate.HasValue)
                                {
                                    <p class="detail-item">
                                        <i class="bi bi-check2-circle"></i>
                                        <strong>Fulfilled:</strong> @prescription.FulfilledDate.Value.ToString("dd MMM yyyy")
                                    </p>
                                }
                            </div>

                            <div class="price-section mt-3 pt-3 border-top">
                                <div class="d-flex justify-content-between">
                                    <span>Unit Price:</span>
                                    <span class="fw-bold">R @prescription.MedicinePrice.ToString("N2")</span>
                                </div>
                                <div class="d-flex justify-content-between total-cost">
                                    <span>Total Cost:</span>
                                    <span class="fw-bold">R @prescription.TotalCost.ToString("N2")</span>
                                </div>
                            </div>

                            @if (!prescription.IsFulfilled)
                            {
                                <div class="mt-3">
                                    <button class="btn btn-primary w-100" @onclick="() => FulfillPrescription(prescription.PrescriptionId)">
                                        <i class="bi bi-check-circle"></i> Fulfill Prescription
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

@code {
    private List<PrescriptionDto> Prescriptions;
    private Response<List<PrescriptionDto>> response = new() { Success = true };

    protected override async Task OnInitializedAsync()
    {
        await LoadPrescriptions();
    }

    private async Task LoadPrescriptions()
    {
        response = await prescriptionService.GetMyPrescriptions();
        if (response.Success)
        {
            Prescriptions = response.Data;
        }
    }

    private async Task FulfillPrescription(int prescriptionId)
    {
        var confirm = await js.InvokeAsync<bool>("confirm",
            "Fulfill this prescription? The total cost will be added to your account balance.");

        if (!confirm) return;

        var fulfillResponse = await prescriptionService.Fulfill(prescriptionId);
        if (fulfillResponse.Success)
        {
            await LoadPrescriptions();
            await js.InvokeVoidAsync("alert", "Prescription fulfilled successfully!");
            StateHasChanged();
        }
        else
        {
            await js.InvokeVoidAsync("alert", fulfillResponse.Message ?? "Failed to fulfill prescription.");
        }
    }
}

<style>
    :root {
        --purple: #270042;
        --teal: #18739a;
        --green: #0acc81;
    }

    .text-purple {
        color: var(--purple);
    }

    .text-teal {
        color: var(--teal);
    }

    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid rgba(0, 0, 0, 0.05);
    }

    .btn-create {
        background: linear-gradient(135deg, var(--green), var(--teal));
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(10, 204, 129, 0.3);
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .empty-icon {
        font-size: 4rem;
        color: var(--teal);
        opacity: 0.3;
        margin-bottom: 1rem;
    }

    .prescription-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .prescription-card.pending {
        border-left: 4px solid #ffc107;
    }

    .prescription-card.fulfilled {
        border-left: 4px solid var(--green);
    }

    .prescription-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .prescription-details .detail-item {
        font-size: 0.9rem;
        margin-bottom: 0.75rem;
        color: #666;
    }

    .prescription-details .detail-item i {
        color: var(--teal);
        margin-right: 0.5rem;
    }

    .price-section {
        background: rgba(24, 115, 154, 0.05);
        padding: 0.75rem;
        border-radius: 8px;
    }

    .total-cost {
        font-size: 1.1rem;
        color: var(--teal);
        margin-top: 0.5rem;
        padding-top: 0.5rem;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }
</style>
