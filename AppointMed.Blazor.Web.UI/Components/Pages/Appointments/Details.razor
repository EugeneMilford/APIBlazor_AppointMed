@page "/appointments/details/{id:int}"
@inject IAppointmentService appointmentService
@inject NavigationManager navManager
@attribute [Authorize(Roles = Roles.Administrator)]

<PageTitle>Appointment Details • AppointMed</PageTitle>

<div class="details-appointment-root">
    <div class="page-header">
        <div class="header-content">
            <h1><i class="bi bi-file-text-fill"></i> Appointment Details</h1>
            <p>View complete appointment information</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <span>@ErrorMessage</span>
        </div>
    }

    @if (IsLoading)
    {
        <div class="loading-container">
            <div class="spinner-large"></div>
            <p>Loading appointment details...</p>
        </div>
    }
    else
    {
        <div class="details-container">
            <div class="details-header">
                <div class="status-badge status-@GetStatusClass()">
                    <i class="bi bi-@GetStatusIcon()"></i>
                    <span>@Appointment.StatusName</span>
                </div>
            </div>

            <div class="details-sections">
                <div class="details-section">
                    <div class="section-header">
                        <i class="bi bi-person-fill"></i>
                        <h5>Patient Information</h5>
                    </div>

                    <div class="info-grid">
                        <div class="info-item">
                            <label><i class="bi bi-person"></i> First Name</label>
                            <div class="info-value">@Appointment.PatientFirstName</div>
                        </div>

                        <div class="info-item">
                            <label><i class="bi bi-person"></i> Last Name</label>
                            <div class="info-value">@Appointment.PatientLastName</div>
                        </div>

                        <div class="info-item">
                            <label><i class="bi bi-envelope"></i> Email Address</label>
                            <div class="info-value">@Appointment.PatientEmail</div>
                        </div>

                        <div class="info-item">
                            <label><i class="bi bi-telephone"></i> Phone Number</label>
                            <div class="info-value">@Appointment.PatientPhoneNumber</div>
                        </div>
                    </div>
                </div>

                <div class="details-section">
                    <div class="section-header">
                        <i class="bi bi-calendar-event-fill"></i>
                        <h5>Appointment Information</h5>
                    </div>

                    <div class="info-grid">
                        <div class="info-item">
                            <label><i class="bi bi-clock"></i> Date & Time</label>
                            <div class="info-value">@Appointment.AppointmentDateTime.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>

                        <div class="info-item">
                            <label><i class="bi bi-tag"></i> Appointment Type</label>
                            <div class="info-value">@Appointment.AppointmentType</div>
                        </div>

                        <div class="info-item">
                            <label><i class="bi bi-person-badge"></i> Doctor</label>
                            <div class="info-value">@DoctorDisplay</div>
                        </div>

                        <div class="info-item">
                            <label><i class="bi bi-check-circle"></i> Status</label>
                            <div class="info-value">
                                <span class="status-inline status-@GetStatusClass()">@Appointment.StatusName</span>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Appointment.Notes))
                    {
                        <div class="info-item full-width">
                            <label><i class="bi bi-file-text"></i> Notes</label>
                            <div class="info-value notes-box">@Appointment.Notes</div>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Appointment.CancellationReason))
                    {
                        <div class="info-item full-width cancellation-box">
                            <label><i class="bi bi-x-circle"></i> Cancellation Reason</label>
                            <div class="info-value">@Appointment.CancellationReason</div>
                        </div>
                    }
                </div>

                <div class="details-section audit-section">
                    <div class="section-header">
                        <i class="bi bi-clock-history"></i>
                        <h5>Audit Information</h5>
                    </div>

                    <div class="info-grid">
                        <div class="info-item">
                            <label><i class="bi bi-plus-circle"></i> Created At</label>
                            <div class="info-value">@Appointment.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>

                        @if (Appointment.UpdatedAt.HasValue)
                        {
                            <div class="info-item">
                                <label><i class="bi bi-pencil-square"></i> Updated At</label>
                                <div class="info-value">@Appointment.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        }

                        @if (Appointment.CancelledAt.HasValue)
                        {
                            <div class="info-item">
                                <label><i class="bi bi-x-circle"></i> Cancelled At</label>
                                <div class="info-value">@Appointment.CancelledAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <button @onclick="GoToEdit" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i>
                    <span>Edit Appointment</span>
                </button>
                <button @onclick="BackToList" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i>
                    <span>Back To List</span>
                </button>
            </div>
        </div>
    }
</div>

<style>
