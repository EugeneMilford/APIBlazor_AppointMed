@page "/appointments/update/{id:int}"
@inject IAppointmentService appointmentService
@inject IDoctorService doctorService
@inject NavigationManager navManager
@attribute [Authorize(Roles = Roles.Administrator)]

<PageTitle>Edit Appointment • AppointMed</PageTitle>

<div class="update-appointment-root">
    <div class="page-header">
        <div class="header-content">
            <h1><i class="bi bi-pencil-square"></i> Edit Appointment</h1>
            <p>Update appointment details and patient information</p>
        </div>
    </div>

    <div class="form-container">
        @if (errorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <span>@errorMessage</span>
            </div>
        }

        @if (successMessage != null)
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle-fill"></i>
                <span>@successMessage</span>
            </div>
        }

        @if (isLoading)
        {
            <div class="loading-container">
                <div class="spinner-large"></div>
                <p>Loading appointment data...</p>
            </div>
        }
        else
        {
            <EditForm Model="Appointment" OnValidSubmit="HandleUpdateAppointment">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-summary" />

                <div class="form-sections">
                    <div class="form-section">
                        <div class="section-header">
                            <i class="bi bi-person-fill"></i>
                            <h5>Patient Information</h5>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="firstname" class="form-label">
                                    <i class="bi bi-person"></i> First Name
                                </label>
                                <InputText @bind-Value="Appointment.PatientFirstName" class="form-control" id="firstname" placeholder="Enter first name" />
                                <ValidationMessage For="@(() => Appointment.PatientFirstName)" class="validation-message" />
                            </div>

                            <div class="form-group">
                                <label for="surname" class="form-label">
                                    <i class="bi bi-person"></i> Last Name
                                </label>
                                <InputText @bind-Value="Appointment.PatientLastName" class="form-control" id="surname" placeholder="Enter last name" />
                                <ValidationMessage For="@(() => Appointment.PatientLastName)" class="validation-message" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="email" class="form-label">
                                    <i class="bi bi-envelope"></i> Email Address
                                </label>
                                <InputText @bind-Value="Appointment.PatientEmail" class="form-control" id="email" placeholder="patient@example.com" />
                                <ValidationMessage For="@(() => Appointment.PatientEmail)" class="validation-message" />
                            </div>

                            <div class="form-group">
                                <label for="phonenumber" class="form-label">
                                    <i class="bi bi-telephone"></i> Phone Number
                                </label>
                                <InputText @bind-Value="Appointment.PatientPhoneNumber" class="form-control" id="phonenumber" placeholder="+1 (555) 000-0000" />
                                <ValidationMessage For="@(() => Appointment.PatientPhoneNumber)" class="validation-message" />
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="section-header">
                            <i class="bi bi-calendar-event-fill"></i>
                            <h5>Appointment Details</h5>
                        </div>

                        <div class="form-group">
                            <label for="appointmentdatetime" class="form-label">
                                <i class="bi bi-clock"></i> Appointment Date & Time
                            </label>
                            <InputDate Type="InputDateType.DateTimeLocal" @bind-Value="Appointment.AppointmentDateTime" class="form-control" id="appointmentdatetime" />
                            <ValidationMessage For="@(() => Appointment.AppointmentDateTime)" class="validation-message" />
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="appointmenttype" class="form-label">
                                    <i class="bi bi-tag"></i> Appointment Type
                                </label>
                                <InputSelect @bind-Value="Appointment.AppointmentType" class="form-select" id="appointmenttype">
                                    <option value="">-- Select Type --</option>
                                    <option value="Consultation">Consultation</option>
                                    <option value="Follow-up">Follow-up</option>
                                    <option value="Emergency">Emergency</option>
                                    <option value="Routine Checkup">Routine Checkup</option>
                                    <option value="Vaccination">Vaccination</option>
                                    <option value="Surgery">Surgery</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => Appointment.AppointmentType)" class="validation-message" />
                            </div>

                            <div class="form-group">
                                <label for="status" class="form-label">
                                    <i class="bi bi-check-circle"></i> Status
                                </label>
                                <InputSelect @bind-Value="Appointment.StatusId" class="form-select" id="status">
                                    <option value="0">-- Select Status --</option>
                                    <option value="1">Scheduled</option>
                                    <option value="2">Confirmed</option>
                                    <option value="3">Completed</option>
                                    <option value="4">Cancelled</option>
                                    <option value="5">No Show</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => Appointment.StatusId)" class="validation-message" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="doctorid" class="form-label">
                                <i class="bi bi-person-badge"></i> Doctor
                            </label>
                            <InputSelect @bind-Value="Appointment.DoctorId" class="form-select" id="doctorid">
                                <option value="0">-- Select Doctor --</option>
                                @foreach (var doctor in Doctors)
                                {
                                    <option value="@doctor.DoctorId">Dr. @doctor.FirstName @doctor.LastName</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => Appointment.DoctorId)" class="validation-message" />
                        </div>

                        @if (Appointment.StatusId == 4)
                        {
                            <div class="form-group cancellation-section">
                                <label for="cancellationreason" class="form-label">
                                    <i class="bi bi-x-circle"></i> Cancellation Reason
                                </label>
                                <InputTextArea @bind-Value="Appointment.CancellationReason" class="form-control" id="cancellationreason" rows="3" placeholder="Reason for cancellation..." />
                                <ValidationMessage For="@(() => Appointment.CancellationReason)" class="validation-message" />
                            </div>
                        }

                        <div class="form-group">
                            <label for="notes" class="form-label">
                                <i class="bi bi-file-text"></i> Notes (Optional)
                            </label>
                            <InputTextArea @bind-Value="Appointment.Notes" class="form-control" id="notes" rows="4" placeholder="Any additional notes or special instructions..." />
                            <ValidationMessage For="@(() => Appointment.Notes)" class="validation-message" />
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button class="btn btn-primary" type="submit" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner"></span>
                            <span>Updating...</span>
                        }
                        else
                        {
                            <i class="bi bi-check-circle"></i>
                            <span>Update Appointment</span>
                        }
                    </button>
                    <button @onclick="BackToList" class="btn btn-secondary" type="button" disabled="@isLoading">
                        <i class="bi bi-arrow-left"></i>
                        <span>Back To List</span>
                    </button>
                </div>
            </EditForm>
        }
    </div>
</div>

