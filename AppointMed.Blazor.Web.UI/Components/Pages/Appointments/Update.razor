            padding: 1.5rem;
        }

        .form-row {
            grid-template-columns: 1fr;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }
</style>

@code {
    [Parameter]
    public int id { get; set; }

    private UpdateAppointmentDto Appointment = new UpdateAppointmentDto();
    private List<DoctorDto> Doctors = new List<DoctorDto>();
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;

    protected async override Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Load appointment data
            var appointmentResponse = await appointmentService.GetForUpdate(id);
            if (appointmentResponse.Success)
            {
                Appointment = appointmentResponse.Data;
            }
            else
            {
                errorMessage = appointmentResponse.Message ?? "Failed to load appointment";
            }

            // Load doctors for dropdown
            var doctorsResponse = await doctorService.Get();
            if (doctorsResponse.Success)
            {
                Doctors = doctorsResponse.Data;
            }
            else
            {
                errorMessage = doctorsResponse.Message ?? "Failed to load doctors";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleUpdateAppointment()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var response = await appointmentService.Edit(id, Appointment);
            if (response.Success)
            {
                successMessage = "Appointment updated successfully!";
                await Task.Delay(1500);
                BackToList();
            }
            else
            {
                errorMessage = response.Message ?? "Failed to update appointment";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating appointment: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void BackToList()
    {
        navManager.NavigateTo("/appointments/");
    }
}